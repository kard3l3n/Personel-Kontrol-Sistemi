@model PersonelMVCUI.Models.EntityFramework.Kullanici
    @{
	    Layout = null;
    }

    <!DOCTYPE html>

    <html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>Login</title>
		<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

	</head>
	<body>
		<h2>Giriş Sayfası</h2>
		@ViewBag.Mesaj
		<div class="container">
			@using (Html.BeginForm("Login", "security", FormMethod.Post))
			{

				<div class="form-group">
					@Html.LabelFor(m => m.Ad)
					@Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholder = "Kullanıcı Adı" })


				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Sifre)
					@Html.TextBoxFor(m => m.Sifre, new { @class = "form-control", placeholder = "Parola" })

				</div>
				<button type="submit" class="btn btn-success">Giriş Yap</button>

			}
		</div>

		

	</body>
    </html>

	

